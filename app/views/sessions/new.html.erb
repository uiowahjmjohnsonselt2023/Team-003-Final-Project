<turbo-frame id="login-form-frame">
<!-- Login Container -->
<div class="login-container">
  <h2>Log in</h2>

  <!-- Login Form -->
  <%= form_with(url: login_path, local: true, html: { class: 'form-login' }) do |f| %>

    <!-- Username Field -->
    <div class="field">
      <%= f.label :username, class: 'label' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input-field' %>
    </div>

    <!-- Password Field -->
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input-field' %>
    </div>

    <!-- Forgot Your Password Link -->
    <div class="field">
      <%= link_to "Forgot Your Password?", new_password_reset_path %>
    </div>

    <!-- "Remember Me" Checkbox -->
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Remember Me" %>
    </div>

    <!-- Login Button -->
    <div class="actions">
      <%= f.submit "Login", class: 'button-login' %>
    </div>
  <% end %>

  <!-- Link to Sign Up Page -->
  <%= link_to "Sign up", new_registration_path, class: 'link-signup' %>
</div>
</turbo-frame>