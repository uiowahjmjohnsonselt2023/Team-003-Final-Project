<div class="page-login">
  <turbo-frame id="login-form-frame">
    <!-- Login Container -->
    <div class="login-container">
      <h1>Log in</h1>

      <!-- Login Form -->
      <%= form_with(url: login_path, local: true, html: { class: 'form-login' }) do |f| %>

        <!-- Username Field -->
        <div class="field">
          <%= f.label :username, class: 'label', for: 'username' %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input-field', id: 'username' %>
        </div>

        <!-- Password Field -->
        <div class="field">
          <%= f.label :password, for: 'password' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'input-field', id: 'password' %>
        </div>

        <!-- "Remember Me" Checkbox -->
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Remember Me" %>
        </div>

        <!-- Forgot Your Password Link -->
        <div class="field">
          <%= link_to "Forgot Your Password?", new_password_reset_path %>
        </div>

        <!-- Login Button -->
        <div class="actions">
          <%= f.submit "Login", class: 'button-login' %>
        </div>
      <% end %>

      <!-- Link to Sign Up Page -->
      <%= link_to "Sign up", new_registration_path, class: 'link-signup' %>
    </div>
  </turbo-frame>
</div>
