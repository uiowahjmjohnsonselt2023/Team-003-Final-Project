<%= form_for @review do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5 %>
  
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  
  <%= f.hidden_field :reviewer_id, value: current_user.id %>
  <%= f.hidden_field :reviewee_id, value: @user.id %>

  <%= f.submit %>
<% end %>
