<h2>Chat with <%= @conversation.other_party(@current_user).username %></h2>

<div class="messages">
  <% @messages.each do |message| %>
    <p>
      <% if message.user %>
        <%= message.user.username %>: <%= message.body %>
      <% else %>
        [Deleted User]: <%= message.body %>
      <% end %>
    </p>
  <% end %>
</div>

<%= form_with(model: [ @conversation, Message.new ], local: true) do |form| %>
  <div class="field">
    <%= form.text_area :body %>
  </div>
  <%= form.submit "Send" %>
<% end %>

