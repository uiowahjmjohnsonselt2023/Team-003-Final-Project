<h1>Conversation with <%= @conversation.other_party(current_user).username %></h1>
<div class="message-thread">
  <% @conversation.messages.each do |msg| %>
    <div class="message <%= 'sent' if msg.sender == current_user %>">
      <p><%= msg.body %></p>
      <span><%= msg.created_at.strftime("%B %d, %Y at %I:%M%p") %></span>
    </div>
  <% end %>
</div>

<div class="reply-form">
  <%= form_with(model: @new_message, url: messages_path) do |form| %>
    <%= form.hidden_field :recipient_id, value: @conversation.other_party(current_user).id %>
    <%= form.text_area :body %>
    <%= form.submit "Send Reply" %>
  <% end %>
</div>
