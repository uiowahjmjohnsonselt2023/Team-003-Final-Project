<h2>Chat about <%= link_to @conversation.product.title, product_path(@conversation.product) %></h2>

<div class="messages">
  <% @messages.each do |message| %>
    <p><%= message.user.username %>: <%= message.body %></p>
  <% end %>
</div>

<%= form_with(model: [ @conversation, @conversation.messages.build ], local: true) do |form| %>
  <div class="field">
    <%= form.text_area :body %>
  </div>
  <%= form.submit "Send" %>
<% end %>
