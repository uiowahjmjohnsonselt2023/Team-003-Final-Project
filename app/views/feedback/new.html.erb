<h1>Leave Feedback for Your Order</h1>

<% if @order %>
  <%= form_with model: [@order, @feedback], url: order_feedback_index_path(@order), local: true do |form| %>
    <div class="form-group">
      <%= form.label :rating, 'Rating (1 to 5)' %>
      <%= form.number_field :rating, in: 1..5, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :comment, 'Comment' %>
      <%= form.text_area :comment, class: 'form-control', required: true %>
    </div>

    <%= form.submit 'Submit Feedback', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <p>Order not found.</p>
<% end %>
