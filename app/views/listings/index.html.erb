<h1>Active Listings for <%= @user.username %></h1>

<div class="listings">
  <% if @listings.any? %>
  <% @listings.each do |listing| %>
    <div class="listing">
      <!-- link to the product's detail page -->
      <%= link_to listing.title, product_path(listing.product) %>
      <p><%= listing.description %></p>
    </div>
  <% end %>
  <% else %>
    <p>No active listings found.</p>
  <% end %>
</div>