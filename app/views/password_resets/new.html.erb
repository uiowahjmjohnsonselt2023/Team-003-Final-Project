<h2>Forgot Your Password?</h2>

<%= form_with(url: password_resets_path, method: :post, class: 'password-reset-form') do |f| %>
  <%= f.label :username, class: 'label' %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input-field' %>
  </div>

  <%= f.label :email, class: 'label' %>
    <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Request Password Reset", class: 'button-reset' %>
  </div>
<% end %>
