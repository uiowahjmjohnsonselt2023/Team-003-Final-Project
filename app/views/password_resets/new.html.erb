<h2>Forgot Your Password?</h2>

<%= form_with(url: password_resets_path, method: :post, class: 'password-reset-form') do |f| %>
  <div class="field">
    <%= f.label :username, class: 'label' %>
    <%= f.text_field :username, class: 'input-field' %>
  </div>

  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, class: 'input-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Request Password Reset", class: 'button-reset' %>
  </div>
<% end %>
