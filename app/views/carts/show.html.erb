<h2>Your Cart</h2>
<% @cart.cart_items.each do |cart_item| %>
  <div class="cart-item">
    <p><%= cart_item.product.title %> (x<%= cart_item.quantity %>)</p>
    <p>Price: <%= number_to_currency(cart_item.product.price * cart_item.quantity) %></p>
    <!-- Add any additional cart item controls here -->
  </div>
<% end %>